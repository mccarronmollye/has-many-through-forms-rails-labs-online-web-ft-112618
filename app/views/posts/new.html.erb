<%= form_for(@post) do |f| %>

  <%=f.label :title %>
  <%=f.text_field :title %>
  <br>
  <%=f.label :content %>
  <%=f.text_area :content %>
  <br>
  Select a category:
  <%=f.collection_check_boxes(:category_ids, Category.all, :id, :name)%>
  <br>
  Create a new category:
  <br>
  <%= f.fields_for :categories, @post.categories.build do |category_fields| %>
  <%= category_fields.text_field :name %>
  <%end%>
  <br>
<%= f.submit "Create Post"%>
<% end %>
